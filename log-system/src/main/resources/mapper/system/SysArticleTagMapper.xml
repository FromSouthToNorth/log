<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="vip.hyzt.system.mapper.SysArticleTagMapper">

    <resultMap id="SysArticleTagResult" type="SysArticleTag">
        <result property="articleId"    column="article_id" />
        <result property="tagId"        column="tag_id"     />
    </resultMap>

    <delete id="deleteArticleTagByArticleId" parameterType="String">
        delete from sys_article_tag where article_id = #{articleId}
    </delete>

    <insert id="batchArticleTag">
        insert into sys_article_tag(id, tag_id, article_id) values
        <foreach item="item" collection="list" separator=",">
            (#{item.id}, #{item.tagId}, #{item.articleId})
        </foreach>
    </insert>

    <delete id="deleteArticleTag" parameterType="String">
        delete from sys_article_tag where article_id in
        <foreach collection="array" item="articleId" open="(" separator="," close=")">
            #{articleId}
        </foreach>
    </delete>

</mapper>